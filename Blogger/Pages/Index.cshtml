@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">Blogger - Test Blog </h1>
            <p class="lead">
                Ta strona jest częścią mojego portfolio.
                Link do repozytorium:
                <a href="https://github.com/ScApeGoAT06660/Blogger" style="color: purple;" target="_blank">[link]</a>
                .
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://www.ibm.com/content/dam/adobe-cms/instana/media_logo/dotnetCore.png/_jcr_content/renditions/cq5dam.web.1280.1280.png" class="d-block mx-lg-auto img-fluid" width="400" />
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="mb-3 display-3">Posts</h2>

            <div class="mb-3">
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    foreach (var item in Model.Tags)
                    {
                        <a href="/tags/@item.Name">
                            <span class="badge bg-dark">@item.Name</span>
                        </a>
                    }
                }
            </div>

            @if (Model.Posts != null && Model.Posts.Any())
            {
                foreach (var item in Model.Posts)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <img src="@item.FeatureImageUrl" class="mb-2 d-block img-fluid w-100" />
                        <div class="px-4 py-4">
                            <h2 class="mb-2">@item.Heading</h2>
                            <p>
                                Author: @item.Author
                                <br />
                                Date Published: @item.PublishedDate.ToShortDateString()
                            </p>
                            <p class="mb-2">@item.ShortDescription</p>
                            <a href="/blog/@item.UrlHandle" class="btn btn-dark">Read More</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>